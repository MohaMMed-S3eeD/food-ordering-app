generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  imageUrl    String
  basePrice   Int
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
