generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  imageUrl    String
  basePrice   Int
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sizes       Size[]
  extras      Extra[]
}

model Size {
  id        String   @id @default(uuid())
  name      SizeType
  price     Float
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

model Extra {
  id        String    @id @default(uuid())
  name      ExtraType
  price     Float
  Product   Product?  @relation(fields: [productId], references: [id])
  productId String?
}

enum SizeType {
  SMALL
  MEDIUM
  LARGE
}

enum ExtraType {
  CHEESE
  PEPPERONI
  MUSHROOM
  ONION
  OLIVE
  SPINACH
  TOMATO
}
